{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    "outDir": "./lib",
    "removeComments": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["ES2015"]
  },
  "include": ["./src/**/*"]
}