{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "paths": {
      "@sage/*": ["../../package/src/*"],
    },
    
    "lib": ["ES2015", "DOM"],
  },
  "include": ["./src/**/*"],
}