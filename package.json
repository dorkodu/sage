{
  "name": "sage",
  "type": "module",
  "private": true,
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "endOfLine": "auto",
    "importOrder": [
      "__",
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "engines": {
    "node": "^16.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm-run-all -p build:server build:client",
    "build:server": "cd ./packages/server && yarn build",
    "build:client": "cd ./packages/client && yarn build",
    "dev": "npm-run-all -p dev:server dev:client",
    "dev:server": "cd ./packages/server && yarn dev",
    "dev:client": "cd ./packages/client && yarn dev",
    "test": "npm-run-all -p test:server test:client",
    "test:server": "cd ./packages/server && yarn test",
    "test:client": "cd ./packages/client && yarn test",
    "warmup": "npm-run-all -s warm:server warm:client",
    "warm:server": "cd ./packages/server && yarn",
    "warm:client": "cd ./packages/client && yarn"
  },
  "devDependencies": {
    "lerna": "^5.4.3",
    "npm-run-all": "^4.1.5"
  },
  "packageManager": "yarn@3.2.2"
}
